#include<iostream>
#include<cmath>
using namespace std;

const double PI = 3.142;

void main()
{
	double j = 1.5, circle;
	circle = PI * pow(j, 2);
	cout << "\n\nThe area of thos circle is " << circle << "\n\n";

	//page 97
	cout << "abs(9.5) is " << abs(9.5) << endl;
	cout << "floor(9.5) is " << floor(9.5) << endl;
	cout << "floor(-9.5) is " << floor(-9.5) << endl;
	cout << "ceil(8.5) is " << ceil(8.5) << endl;
	cout << "ceil(-8.5) is " << ceil(-8.5) << endl;
	cout << "sqrt(pow(6,4)) is " << sqrt(pow(6, 4)) << endl << endl;
}

